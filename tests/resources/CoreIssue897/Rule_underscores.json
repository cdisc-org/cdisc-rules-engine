  "Check": {
    "all": [
      {
        "name": "rel_type",
        "operator": "equal_to",
        "value": "definition"
      },
      {
        "name": "$xhtml_errors",
        "operator": "non_empty"
      }
    ]
  },
  "Core": {
    "Id": "",
